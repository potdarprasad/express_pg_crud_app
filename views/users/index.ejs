<!doctype html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs")%>
        <title>Manage Users</title>
</head>

<body>
    <div class="container-fluid">
        <h2 class="text-center text-info mt-5">Users List</h2>
        <div class="row">
            <div class="text-end">
                <a href="/manageUsers/create" class="btn btn-success">+ Add User</a>
            </div>
        </div>
        <div class="row mt-5">
            <div class=" mx-auto">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr class="table-dark text-white">
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if(users.length){%>
                            <%for(let i=0; i< users.length; i++){%>
                                <tr>
                                    <td>
                                        <%= i + 1%>
                                    </td>
                                    <td><%- users[i].first_name%></td>
                                    <td><%- users[i].last_name%></td>
                                    <td><%- users[i].email%></td>
                                    <td><%- users[i].mobile%></td>
                                    <td>
                                        <a class="btn btn-warning" href="/manageUsers/edit/<%-users[i].id%>">Edit</a>
                                        <a class="btn btn-danger" href="/manageUsers/delete/<%-users[i].id%>">Delete</a>
                                    </td>
                                </tr>
                                <%}}else{%>
                                    <tr class="text-center text-danger">
                                        <td colspan="6">No users found....</td>
                                    </tr>
                                    <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("../partials/scripts.ejs")%>
</body>

</html>